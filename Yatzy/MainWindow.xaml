<mah:MetroWindow x:Class="Yatzy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Yatzy"
        mc:Ignorable="d"
        Title="Yatzy" Height="1050" Width="800" KeyDown="MetroWindow_KeyDown" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <mah:MetroWindow.Resources>
        <local:AddSpaceConverter x:Key="AddSpaceConverter"/>
        <local:HideButton x:Key="HideButton"/>
    </mah:MetroWindow.Resources>       
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="1" Grid.ColumnSpan="2" Content="Return to lobby" Click="Return_Lobby_Click" Width="100" Height="30" HorizontalAlignment="Center"></Button>

        <ItemsControl ItemsSource="{Binding Players}" Grid.Row="0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" ></StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="{Binding BorderBrush}" BorderThickness="3" CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Margin="0 10 0 10">
                                <StackPanel Orientation="Horizontal">
                                    <Button  Style="{DynamicResource MahApps.Styles.Button.Circle}" BorderThickness="0"  FontSize="24" FontWeight="Bold" Width="50" Margin="0 0 10 0" Height="50" Click="NewGame_Click" IsEnabled="{Binding OutofRolls}">
                                        <Button.Content>
                                            <Image Source="{Binding StartButton}" Width="35" Height="35" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill" ></Image>

                                        </Button.Content>
                                        <!--<Button.Content>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="{Binding StartButton}"></TextBlock>
                        </Button.Content>-->
                                    </Button>

                                    <ItemsControl ItemsSource="{Binding Dices}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Height="50" HorizontalAlignment="Center"  Orientation="Horizontal"></StackPanel>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border x:Name="border1" Tag="{Binding}" Margin="0 0 10 0" Width="50"  BorderBrush="blue" BorderThickness="2" CornerRadius="3" MouseDown="Border_MouseDown">
                                                    <Image Source="{Binding ImageSource}"/>

                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Grid.Row="1" FontSize="16" FontFamily="Roboto" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding UserName}" Margin="0 10 0 0"></TextBlock>
                            <ItemsControl ItemsSource="{Binding Points}" Grid.Row="2" Width="210" HorizontalAlignment="Center">

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="2" Margin="2" >
                                            <Grid Background="{Binding BakGrund}" >

                                                <Grid.Resources>
                                                    <Style x:Key="strikethrough" TargetType="TextBlock">
                                                        <Setter Property="TextDecorations">
                                                            <Setter.Value>
                                                                <TextDecorationCollection>
                                                                    <TextDecoration Location="Strikethrough">
                                                                        <TextDecoration.Pen>
                                                                            <Pen Thickness="6"></Pen>
                                                                        </TextDecoration.Pen>
                                                                    </TextDecoration>
                                                                </TextDecorationCollection>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter Property="FontSize" Value="16"></Setter>
                                                        <Setter Property="FontFamily" Value="Roboto"></Setter>
                                                    </Style>

                                                </Grid.Resources>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="{Binding Font}" Foreground="{Binding FontColor}" VerticalAlignment="Center" Padding="5 0 0 0" FontSize="16"></TextBlock>
                                                <Button Grid.Column="1" Width="30" Height="30" FontFamily="Segoe UI" Content="&#x2714;" Foreground="ForestGreen" Margin="0 5 0 5" Click="AddScore_Click" IsEnabled="{Binding LeftButtonEnabled}" Visibility="{Binding ShowButton, Converter={StaticResource HideButton}}"></Button>
                                                <TextBlock Margin="10 0 10 0" Text="{Binding Point}" Grid.Column="2" FontWeight="{Binding Font}" VerticalAlignment="Center" FontSize="16"/>
                                                <Button Grid.Column="3" Width="30" Height="30" FontFamily="Segoe UI" Content="&#x274C;" Foreground="Red" IsEnabled="{Binding RightButtonEnabled}" Visibility="{Binding ShowButton, Converter={StaticResource HideButton}}" Click="StrikeScore_Click"></Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <StackPanel Grid.Column="1" Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="0 20 0 10 " HorizontalAlignment="Center">
                <TextBlock FontSize="16" FontFamily="Roboto" FontWeight="Bold"  HorizontalAlignment="Center" Text="Highscore" VerticalAlignment="Center"></TextBlock>
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE894;" Foreground="Red" FontSize="24" Margin="10 0 0 0 " MouseDown="TextBlock_MouseDown_1"></TextBlock>
                
            </StackPanel>
            <ItemsControl ItemsSource="{Binding Topscorer}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Roboto" FontSize="16" Foreground="{Binding FontColor}">
                            <Run Text="{Binding Index, Converter={StaticResource AddSpaceConverter}}"></Run>

                            <Run Text="{Binding Datum}"></Run>
                            <Run Text="{Binding Score}"></Run>

                        </TextBlock>
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontWeight="Bold" Text="&#xE894;" Foreground="Red" Margin="10 0 0 0 " MouseDown="TextBlock_MouseDown_2"></TextBlock>

                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

    </Grid>
</mah:MetroWindow>
