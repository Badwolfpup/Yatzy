<Window x:Class="Yatzy.NickName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yatzy"
        mc:Ignorable="d"
        Title="NickName" Height="450" Width="800" SizeToContent="WidthAndHeight" KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="20" Text="Enter your NickName" HorizontalAlignment="Center" Margin="10"></TextBlock>
            <TextBox Text="{Binding NickNameText, UpdateSourceTrigger=PropertyChanged}" x:Name="enternickname"  Height="30" Margin="10"></TextBox>
            <Button HorizontalAlignment="Right" Content="Enter game" Click="Button_Click" Margin="10"></Button>
        </StackPanel>
    </Grid>
</Window>
